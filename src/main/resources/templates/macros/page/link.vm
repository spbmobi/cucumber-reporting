#macro(includeLink, $page_title, $page_description, $page_link, $link_text)
<div id="report-lead" class="container-fluid">
  <div class="col-md-10 col-md-offset-1">
    <h2>$page_title</h2>
    #if($page_description)
          <p>$page_description</p>
	#end
    #if($page_link)
      <p><a href="$page_link" target="_blank">$link_text</a></p>
    #end
  </div>
</div>
#end
